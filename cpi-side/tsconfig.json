{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "rootDir": "..",
        "outDir": "build",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "noImplicitOverride": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "lib": [
        "es2020.Promise"
        ]
    },
    "exclude": [
        "./build/**",
        "./dest/**"
    ]
}
  