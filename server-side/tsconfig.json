{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "rootDir": "..",
    "outDir": "build",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "types": [
      "node"
    ],
  },
  "exclude": [
    "./build/**",
    "./dest/**"
  ]
}
